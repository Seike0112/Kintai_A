<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-primary" %>　
        <%= l(@first_day, format: :middle) %>　勤怠管理表　
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-primary" %>
      </td>
      <td>指定勤務時間　<%= format_basic_info(@user.work_time) %></td>
      <td>基本時間　<%= format_basic_info(@user.basic_time) %></td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属　<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前　<%= @user.name %></td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2" colspan="1">在社時間</th>
        <th rowspan="2" colspan="1">備考</th>
        <th rowspan="2" colspan="1">残業時間</th>
        <th rowspan="2" colspan="1">指示者</th>
      </tr>
      <tr>
        <th colspan="1">時</th>
        <th colspan="1">分</th>
        <th colspan="1"></th>
        <th colspan="1">時</th>
        <th colspan="1">分</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <% if $days_of_the_week[0] === $days_of_the_week[day.worked_on.wday] %>
            <% day_colors = "red" %>
          <% elsif $days_of_the_week[6] === $days_of_the_week[day.worked_on.wday] %>
            <% day_colors = "blue" %>
          <% else %>
            <% day_colors = "black" %>
          <% end %>
          <td style="color: <%= day_colors %>">
            <%= $days_of_the_week[day.worked_on.wday] %>
          </td>
          <td><%= l(day.started_at, format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :minit) if day.started_at.present? %></td>
          <td>
            <% if day.started_at.blank? && day.finished_at.blank? && btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :minit) if day.finished_at.present? %></td>
          <td colspan="1">
            <% if day.started_at.present? && day.finished_at.blank? && btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td colspan="1">
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td colspan="1"></td>
          <td colspan="1"></td>
          <td colspan="1"></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td></td>
        <td></td>
        <td>所属長承認</td>
      </tr>
    </tfoot>    
  </table>
</div>